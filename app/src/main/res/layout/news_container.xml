<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/news_background"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumb_image_news_container"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zoho_logo" />

    <TextView
        android:id="@+id/title_news_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/thumb_image_news_container"
        app:layout_constraintStart_toStartOf="@+id/thumb_image_news_container"
        app:layout_constraintTop_toBottomOf="@+id/thumb_image_news_container" />

    <TextView
        android:id="@+id/description_news_conatiner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a  It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop ."
        app:layout_constraintEnd_toEndOf="@+id/title_news_container"
        app:layout_constraintStart_toStartOf="@+id/title_news_container"
        app:layout_constraintTop_toBottomOf="@+id/title_news_container" />

    <TextView
        android:id="@+id/read_more_news_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Read More..."
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/description_news_conatiner"
        app:layout_constraintTop_toBottomOf="@+id/description_news_conatiner" />

</androidx.constraintlayout.widget.ConstraintLayout>